<Page x:Class="Shaitanet_Safiullin.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shaitanet_Safiullin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="AuthPage">

    <Grid>
        
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" FontSize="18">Вход</TextBlock>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center">Логин</TextBlock>
                    <TextBox Background="White" Foreground="Black" Name="LoginTb" Width="200" Margin="10"></TextBox>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center">Пароль</TextBlock>
                <TextBox Background="White" Foreground="Black" Name="PassTb" Width="200" Margin="10"></TextBox>
                </StackPanel>
                <Button Margin="10" Background="Black" Foreground="White" Name="EnterBtn" Click="EnterBtn_Click">Войти</Button>
            </StackPanel>
        
    </Grid>
</Page>
